
<launch>
    <arg name="namespace_prefix" default="my_eih_calib" />



    <!-- start ArUco --> 
    <arg name="markerId" default="15"/>
    <arg name="markerSize" default="0.078"/> <!-- in meter -->
    <arg name="marker_frame" default="marker_frame"/>
    <arg name="ref_frame" default="camera_link"/> <!-- leave empty and the pose will be published wrt param parent_name -->
    <arg name="corner_refinement" default="LINES" /> <!-- NONE, HARRIS, LINES, SUBPIX -->
    
    
    <node pkg="aruco_ros" type="single" name="aruco_single">
        <remap from="/camera_info" to="/camera/color/camera_info" />
        <remap from="/image" to="/camera/color/image_raw" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size" value="$(arg markerSize)"/>
        <param name="marker_id" value="$(arg markerId)"/>
        <param name="reference_frame" value="camera_link"/> <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame" value="camera_color_optical_frame"/>
        <param name="marker_frame" value="marker_frame" />
        <param name="corner_refinement" value="$(arg corner_refinement)" />
    </node>  
    

    <!-- start easy_handeye -->
    <include file="$(find easy_handeye)/launch/calibrate.launch" >
        <arg name="eye_on_hand" value="true" />
        
        <arg name="namespace_prefix" value="$(arg namespace_prefix)" />

        <arg name="tracking_base_frame" value="/camera_link"/>
        <arg name="tracking_marker_frame" value="/calibration_target"/>

        <arg name="robot_base_frame" value="/base_link" />
        <arg name="robot_effector_frame" value="/ee_link" />
    </include>

    <!-- We used the realsense, and finally found that the camera 
    is not the same as the xyz axis of the point cloud. 
    We changed the original publish frame and inserted a tf 
    in the middle to solve this problem-->

    <!-- calibration result
        <group>
        <node pkg="tf" type="static_transform_publisher" name="camera_link"
         args="0 0 0 0 -1.5707963268 1.5707963268 camera_link2 camera_link 100" />
    </group>

        <include file="$(find easy_handeye)/launch/publish.launch">
            <arg name="namespace" value="$(arg namespace_prefix)"/>
        </include>

    <launch>

    <include file="$(find easy_handeye)/launch/publish.launch" >
    </include>

    </launch>
    -->

</launch>
